<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sun-web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Sun ONE Web Server 6.1 Servlet 2.3//EN' 'http://www.sun.com/software/sunone/appserver/dtds/sun-web-app_2_3-1.dtd'>

<!--
    setting cookiePath to '/'. The reason being the URI
        used by the admin is entirely different from the
        contextRoot of the admin-app.
        Hence, the JSESSIOID is not returned by the browser.
-->
<sun-web-app>
  <session-config>
    <cookie-properties>
      <property name="cookiePath" value="/"/>
    </cookie-properties>
  </session-config>
  <jsp-config>
    <property name="reload-interval" value="0" />
  </jsp-config>
  

</sun-web-app>
